<component type="desktop-application">
	<id>co.logonoff.awakeonlan</id>

	<name>Awake on LAN</name>
	<summary>Remotely wake up computers</summary>

	<metadata_license>CC-BY-4.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>

	<description>
		<p>
			Awake on LAN is a simple application that allows you to wake up computers remotely using Wake-on-LAN packets. You can keep track of computers by adding, removing, and editing them with their MAC addresses, and you can start them remotely with the click of a button.
		</p>
	</description>

	<developer id="co.logonoff">
		<name translate="no">logonoff</name>
	</developer>

	<url type="homepage">https://github.com/logonoff/awake-on-lan</url>
	<url type="bugtracker">https://github.com/logonoff/awake-on-lan/issues</url>
	<url type="vcs-browser">https://github.com/logonoff/awake-on-lan</url>
 	<url type="translate">https://github.com/logonoff/awake-on-lan/tree/main/po</url>

	<launchable type="desktop-id">co.logonoff.awakeonlan.desktop</launchable>

	<content_rating type="oars-1.1" />

	<icon type="stock">co.logonoff.awakeonlan</icon>

	<categories>
		<category>Network</category>
		<category>RemoteAccess</category>
	</categories>

